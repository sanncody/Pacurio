<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-10 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2 text-lg font-light tracking-tight hover:text-cyan-300"
                    href="/api/owners/admin">All Products</a>
                <a class="block w-fit mb-2 text-lg font-light tracking-tight hover:text-cyan-300"
                    href="/api/owners/admin/create-products">Create new product</a>
            </div>
        </div>
        <div class="h-full w-[0.5px] bg-zinc-700 absolute left-[250px] top-[4.5rem]"></div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <a class="text-red-500" href="">Delete all</a>
            <div class="flex flex-wrap items-start gap-5">
                <% products.forEach(product=> { %>
                    <div class="w-60 bg-pink-500 border-2 rounded-md border-[<%= product.bgColor %>]">
                        <div class="w-auto flex items-center justify-center bg-[<%= product.bgColor %>] py-2 px-5">
                            <img src="data:image;base64,<%= product.image.toString('base64') %>"
                                class="h-[10rem] object-cover"></img>
                        </div>
                        <div
                            class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelColor %>] text-[<%= product.textColor %>]">
                            <div>
                                <h3 class="text-xl font-semibold tracking-tight">
                                    <%= product.name %>
                                </h3>
                                <h4 class="text-xl font-semibold tracking-tight">â‚¹ <%= product.price %>
                                </h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/shop">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>