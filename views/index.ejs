<%- include('./partials/header') %>

    <% if(error.length> 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 shadow-md">
            <span class="inline-block text-white font-medium">
                <%= error %>
            </span>
        </div>
    <% } %>

        <div class="min-h-screen flex items-center justify-center bg-zinc-900 px-6 text-white">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 w-full max-w-5xl">

                <!-- Register Card -->
                <div class="bg-zinc-800 rounded-2xl p-8 shadow-lg">
                    <h3 class="text-3xl font-bold">Welcome to <span class="text-blue-400">Pacurio</span></h3>
                    <h4 class="text-xl mt-6 mb-4 font-semibold">Create your account</h4>
                    <form autocomplete="off" action="/api/users/register" method="post" class="space-y-4 text-black">
                        <input
                            class="bg-zinc-100 w-full px-4 py-2 rounded-md border border-zinc-200 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                            type="text" placeholder="Full Name" name="fullname">
                        <input
                            class="bg-zinc-100 w-full px-4 py-2 rounded-md border border-zinc-200 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                            type="email" placeholder="Email" name="email">
                        <input
                            class="bg-zinc-100 w-full px-4 py-2 rounded-md border border-zinc-200 focus:ring-2 focus:ring-blue-400 focus:outline-none"
                            type="password" placeholder="Password" name="password">
                        <button
                            class="w-full px-5 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md transition">Create
                            My Account</button>
                    </form>
                </div>

                <!-- Login Card -->
                <div class="bg-zinc-800 rounded-2xl p-10 shadow-lg">
                    <h4 class="text-xl mb-4 font-semibold">Login Your Account</h4>
                    <form autocomplete="off" action="/api/users/login" method="post" class="space-y-4">
                        <input
                            class="bg-zinc-100 w-full px-4 py-2 rounded-md border border-zinc-200 focus:ring-2 focus:ring-blue-400 focus:outline-none text-black"
                            type="email" placeholder="Email" name="email">
                        <input
                            class="bg-zinc-100 w-full px-4 py-2 rounded-md border border-zinc-200 focus:ring-2 focus:ring-blue-400 focus:outline-none text-black"
                            type="password" placeholder="Password" name="password">
                        <button
                            class="w-full px-5 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md transition">Login</button>
                    </form>
                </div>

            </div>
        </div>
        <%- include('./partials/footer') %>